<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="container">
        <header>
            <h2><%= pageTitle %></h2>
        </header>
        <main>
            <form class="form form-horizontal" id="make-event" method="POST" action="/party">
                <div class="form-group">
                    <label for="eventname" class="col-sm-4 control-label">Event Name</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="eventname" name="eventname" placeholder="Enter event name.">
                    </div>
                    <div class="form-group">
                        <label for="djname" class="col-sm-4 control-label">DJ Name</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="djname" name="djname" placeholder="Enter DJ name.">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="location" class="col-sm-4 control-label"> Location</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="location" name="location" placeholder="Where's it at?">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="eventDate" class="col-sm-4 control-label">Date</label>
                        <div class="col-sm-6">
                            <input type="date" class="form-control" id="eventDate" name="eventDate">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="private" class="col-sm-4 control-label">Private?</label>
                        <div class="col-sm-6">
                            <input type="checkbox" class="form-control" id="private" name="private">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-6">
                            <button type="submit" class="btn btn-default" id="create">Create!</button>
                        </div>
                    </div>
                </div>
            </form>
        </main>
        </div>

        <% include ../partials/scripts %>
</body>

</html>
